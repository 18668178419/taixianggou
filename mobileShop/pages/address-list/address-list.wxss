.container {
  padding: 12px;
}

.header {
  margin-bottom: 10px;
}

.btn-add {
  width: 100%;
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 20px;
  font-size: 14px;
}

.empty {
  margin-top: 80px;
  text-align: center;
  color: #999;
}

.empty-text {
  font-size: 14px;
}

.list {
  max-height: 100vh;
}

.item {
  padding: 10px 0;
  border-bottom: 1px solid #f5f5f5;
}

.top {
  display: flex;
  align-items: center;
  margin-bottom: 4px;
}

.name {
  font-size: 14px;
  color: #333;
  margin-right: 10px;
}

.phone {
  font-size: 13px;
  color: #666;
}

.tag-default {
  margin-left: 8px;
  font-size: 11px;
  color: #ff6b6b;
  border: 1px solid #ff6b6b;
  border-radius: 10px;
  padding: 0 6px;
}

.addr {
  font-size: 13px;
  color: #666;
  margin-bottom: 6px;
}

.actions {
  display: flex;
  justify-content: flex-end;
}

.btn-small {
  font-size: 12px;
  margin-left: 6px;
}

.btn-del {
  color: #ff4d4f;
}


