/* pages/order-list/order-list.wxss */
.order-list {
  padding-bottom: 20rpx;
}

.order-card {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.order-items {
  margin-bottom: 20rpx;
}

.order-item {
  display: flex;
  margin-bottom: 20rpx;
}

.order-item:last-child {
  margin-bottom: 0;
}

.order-item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.order-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.order-item-name {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.order-item-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order-item-price-box {
  display: flex;
  align-items: baseline;
}

.order-item-count {
  font-size: 24rpx;
  color: #999;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
}

.order-total {
  font-size: 28rpx;
  color: #333;
}

.order-actions {
  display: flex;
}

.order-action-btn {
  padding: 10rpx 30rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.order-action-btn.secondary {
  background: #fff;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.order-action-btn.primary {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%);
  color: #fff;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  padding: 20rpx 60rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%);
  color: #fff;
  border-radius: 50rpx;
  font-size: 28rpx;
}

