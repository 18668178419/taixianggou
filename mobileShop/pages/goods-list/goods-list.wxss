/* pages/goods-list/goods-list.wxss */
.search-bar {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 2rpx;
}

.search-box {
  display: flex;
  align-items: center;
  height: 70rpx;
  background: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 30rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.sort-bar {
  display: flex;
  background: #fff;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.sort-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
}

.sort-item.active {
  color: #ff6b6b;
  font-weight: bold;
}

.sort-arrow {
  margin-left: 5rpx;
  font-size: 24rpx;
}

.goods-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
  background: #fff;
}

.goods-item {
  width: 48%;
  margin-bottom: 20rpx;
}

.goods-image {
  width: 100%;
  height: 280rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.goods-info {
  padding: 0 10rpx;
}

.goods-name {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 10rpx;
  height: 72rpx;
  line-height: 36rpx;
}

.goods-tags {
  margin-bottom: 10rpx;
}

.goods-price-box {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.price-box {
  display: flex;
  align-items: baseline;
}

.original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.goods-sales {
  font-size: 22rpx;
  color: #999;
}

.empty {
  padding: 200rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

