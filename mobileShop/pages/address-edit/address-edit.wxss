.container {
  padding: 12px;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 8px 0;
  border-bottom: 1px solid #f5f5f5;
}

.form-item.row {
  justify-content: space-between;
}

.label {
  width: 80px;
  font-size: 14px;
  color: #333;
}

.input {
  flex: 1;
  font-size: 14px;
}

.picker-value {
  flex: 1;
  font-size: 14px;
  color: #333;
}

.picker-value.placeholder {
  color: #999;
}

.btn-save {
  margin-top: 20px;
  width: 100%;
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 20px;
  font-size: 15px;
}


