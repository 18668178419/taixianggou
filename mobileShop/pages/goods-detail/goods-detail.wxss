/* pages/goods-detail/goods-detail.wxss */
.goods-swiper {
  width: 100%;
  height: 750rpx;
  background: #fff;
}

.goods-swiper-image {
  width: 100%;
  height: 100%;
}

.goods-info-section {
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.goods-price-box {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 20rpx;
}

.goods-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.goods-tags {
  margin-bottom: 20rpx;
}

.goods-meta {
  display: flex;
  font-size: 24rpx;
  color: #999;
}

.goods-meta text {
  margin-right: 30rpx;
}

.spec-section {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.spec-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.spec-value {
  flex: 1;
  font-size: 28rpx;
  color: #999;
}

.spec-arrow {
  font-size: 32rpx;
  color: #999;
}

.detail-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 120rpx;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.detail-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.detail-image {
  width: 100%;
  margin-top: 20rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.bar-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.bar-icon {
  font-size: 40rpx;
  margin-bottom: 5rpx;
}

.bar-text {
  font-size: 20rpx;
  color: #666;
}

.cart-badge {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  min-width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  padding: 0 8rpx;
  background: #ff6b6b;
  color: #fff;
  border-radius: 15rpx;
  font-size: 20rpx;
  text-align: center;
}

.bar-btn {
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  text-align: center;
}

.add-cart-btn {
  background: #fff;
  color: #ff6b6b;
  border: 2rpx solid #ff6b6b;
  margin-right: 20rpx;
}

.buy-now-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%);
  color: #fff;
}

/* 规格选择弹窗 */
.spec-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: none;
  align-items: flex-end;
}

.spec-modal.show {
  display: flex;
}

.spec-modal-content {
  width: 100%;
  max-height: 80vh;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.spec-modal-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
  position: relative;
}

.spec-modal-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.spec-modal-info {
  flex: 1;
}

.spec-modal-price-box {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.spec-modal-stock {
  font-size: 24rpx;
  color: #999;
}

.spec-modal-close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 40rpx;
  color: #999;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.spec-modal-body {
  flex: 1;
  padding: 30rpx;
  max-height: 400rpx;
}

.spec-group {
  margin-bottom: 40rpx;
}

.spec-group-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.spec-options {
  display: flex;
  flex-wrap: wrap;
}

.spec-option {
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #333;
  background: #fff;
}

.spec-option.active {
  border-color: #ff6b6b;
  color: #ff6b6b;
  background: #fff5f5;
}

.spec-modal-footer {
  padding: 30rpx;
  border-top: 2rpx solid #f5f5f5;
}

.spec-count {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.spec-count-label {
  font-size: 28rpx;
  color: #333;
}

.spec-count-control {
  display: flex;
  align-items: center;
}

.spec-count-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #333;
}

.spec-count-value {
  margin: 0 30rpx;
  font-size: 28rpx;
  color: #333;
  min-width: 60rpx;
  text-align: center;
}

.spec-modal-btns {
  display: flex;
}

.spec-modal-btn {
  flex: 1;
  padding: 25rpx 0;
  text-align: center;
  border-radius: 50rpx;
  font-size: 28rpx;
}

.spec-modal-btn.add-cart {
  background: #fff;
  color: #ff6b6b;
  border: 2rpx solid #ff6b6b;
  margin-right: 20rpx;
}

.spec-modal-btn.buy-now {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%);
  color: #fff;
}

