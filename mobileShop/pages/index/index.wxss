/* pages/index/index.wxss */
.container {
  padding-bottom: 20rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background: #fff;
}

.search-box {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  background: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 30rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 轮播图 */
.banner-swiper {
  width: 100%;
  height: 360rpx;
  margin-bottom: 20rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 分类导航 */
.category-nav {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.category-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.category-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
}

/* 区块 */
.section {
  margin-bottom: 20rpx;
  background: #fff;
  padding: 30rpx 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

/* 横向滚动商品 */
.goods-scroll {
  white-space: nowrap;
  width: 100%;
}

.goods-item {
  display: inline-block;
  width: 280rpx;
  margin-right: 20rpx;
  vertical-align: top;
}

.goods-image {
  width: 100%;
  height: 280rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.goods-info {
  padding: 0 10rpx;
}

.goods-name {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 10rpx;
  height: 72rpx;
  line-height: 36rpx;
}

.goods-price-box {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.goods-sales {
  font-size: 22rpx;
  color: #999;
}

/* 商品网格 */
.goods-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-card {
  width: 48%;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.goods-card-image {
  width: 100%;
  height: 320rpx;
}

.goods-card-info {
  padding: 20rpx;
}

.goods-card-name {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 10rpx;
  height: 72rpx;
  line-height: 36rpx;
}

.goods-card-tags {
  margin-bottom: 10rpx;
}

.goods-card-price-box {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.price-box {
  display: flex;
  align-items: baseline;
}

.goods-card-sales {
  font-size: 22rpx;
  color: #999;
}

