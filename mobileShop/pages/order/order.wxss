/* pages/order/order.wxss */
.address-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.address-content {
  flex: 1;
}

.address-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.address-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-right: 20rpx;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
}

.address-empty {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #999;
}

.address-arrow {
  font-size: 32rpx;
  color: #999;
}

.goods-section {
  background: #fff;
  margin-bottom: 20rpx;
}

.order-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.order-item:last-child {
  border-bottom: none;
}

.order-item-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.order-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.order-item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.order-item-specs {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.order-item-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order-item-price-box {
  display: flex;
  align-items: baseline;
}

.order-item-count {
  font-size: 28rpx;
  color: #666;
}

.info-section {
  background: #fff;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #333;
  width: 150rpx;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  text-align: right;
}

.info-input {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  text-align: right;
}

.price-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 120rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.price-item:last-child {
  margin-bottom: 0;
}

.price-item.total {
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-item.total .price-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.price-value {
  font-size: 28rpx;
  color: #666;
}

.price-item.total .price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.bar-total {
  display: flex;
  align-items: baseline;
}

.bar-total-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.bar-btn {
  padding: 20rpx 50rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%);
  color: #fff;
  border-radius: 50rpx;
  font-size: 28rpx;
  text-align: center;
}

