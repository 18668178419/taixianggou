.container {
  padding: 12px;
}

.empty {
  margin-top: 80px;
  text-align: center;
  color: #999;
}

.empty-text {
  font-size: 14px;
}

.list {
  max-height: 100vh;
}

.item {
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #f5f5f5;
}

.thumb {
  width: 80px;
  height: 80px;
  border-radius: 6px;
  background-color: #f5f5f5;
}

.info {
  flex: 1;
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title {
  font-size: 14px;
  color: #333;
}

.price {
  font-size: 14px;
  color: #ff6b6b;
  font-weight: 500;
}

.actions {
  display: flex;
  align-items: center;
  margin-left: 8px;
}

.btn-unfav {
  font-size: 12px;
  padding: 0 10px;
  height: 28px;
  line-height: 28px;
  border-radius: 14px;
  border: 1px solid #ff6b6b;
  color: #ff6b6b;
  background-color: #fff;
}


