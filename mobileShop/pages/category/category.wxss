/* pages/category/category.wxss */
.category-container {
  display: flex;
  height: calc(100vh - 100rpx);
}

.category-sidebar {
  width: 200rpx;
  background: #f5f5f5;
  height: 100%;
}

.category-sidebar-item {
  padding: 30rpx 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  border-left: 4rpx solid transparent;
  background: #f5f5f5;
}

.category-sidebar-item.active {
  background: #fff;
  color: #ff6b6b;
  border-left-color: #ff6b6b;
  font-weight: bold;
}

.category-content {
  flex: 1;
  background: #fff;
  padding: 20rpx;
}

.category-banner {
  position: relative;
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.category-banner-image {
  width: 100%;
  height: 100%;
}

.category-banner-title {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.goods-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-item {
  width: 48%;
  margin-bottom: 20rpx;
}

.goods-image {
  width: 100%;
  height: 280rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.goods-info {
  padding: 0 10rpx;
}

.goods-name {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 10rpx;
  height: 72rpx;
  line-height: 36rpx;
}

.goods-price-box {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.goods-sales {
  font-size: 22rpx;
  color: #999;
}

